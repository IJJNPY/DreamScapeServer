{
	"bsonType": "object",
	"required": [
		"title"
	],
	"permission": {
		"read": true,
		"create": "'manage' in auth.role",
		"update": "'UPDATE_PERMISSION' in auth.permission || doc.user_id == auth.uid",
		"delete": "'UPDATE_PERMISSION' in auth.permission || doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"description": "公告表态"
		},
		"content": {
			"bsonType": "string",
			"description": "公告详情内容"
		},
		"user_id": {
			"bsonType": "string",
			"description": "作者ID， 参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		},
		"select": {
			"bsonType": "bool",
			"description": "是否精选 默认false, true是精选",			
			"defaultValue":false
		},
		"checked": {
			"bsonType": "bool",
			"description": "是否启用 默认false, true是启用",			
			"defaultValue":true
		},
		"view_count": {
			"bsonType": "int",
			"description": "阅读数",
			"defaultValue":100
		},		
		"createTime": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}