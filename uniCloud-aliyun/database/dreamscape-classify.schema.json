// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"sort":{
			"title": "排序",
			"bsonType": "int"
		},
		"picurl":{
			"title": "分类封面",
			"bsonType": "string"
		},
		"name":{
			"title": "分类名称",
			"bsonType": "string"
		},
		"select":{
			"title": "状态",
			"bsonType": "bool",
			"defaultValue":false
		},		
		"createTime":{
			"title": "创建时间",
			"bsonType": "timestamp",
			"DefaultValue":{
				"$env": "now"
			}
		},
		"updateTime":{
			"title": "更新时间",
			"bsonType": "timestamp",
			"DefaultValue":{
				"$env": "now"
			}
		}
	}
}